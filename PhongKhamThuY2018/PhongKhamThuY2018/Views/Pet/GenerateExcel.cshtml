@model List<Models.FrameWork.THU>


<h3 class="page-title">Quản lý thú cưng</h3>
<!-- BORDERED TABLE -->
<div class="panel">


    <div class="panel-body">

        @if (TempData["AlertMessage"] != null)
        {
            <div class="col-md-12">
                <div id="AlertClass" class="alert @TempData["AlertType"]  hide">@TempData["AlertMessage"]</div>
            </div>
        }


        <div class=" col-sm-12 col-md-12 col-lg-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên thú</th>
                        <th>Tên chủ</th>
                        <th>Màu lông</th>
                        <th>Loài</th>
                        <th>Giới tính</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MATHU</td>
                            <td>@item.TENTHU</td>
                            <td>@item.KHACHHANG.TEN</td>
                            <td>@item.MAULONG</td>
                            <td>@item.LOAI</td>
                            <td>@item.GIOITINH</td>
                            <td>
                                <a href="/Pet/Edit/@item.MATHU" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i></a>
                                <a href="#" class="btn btn-sm btn-success"><i class="fa fa-eye"></i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

         
        </div>
    </div>
</div>
<!-- END BORDERED TABLE -->
