@model PagedList.IPagedList<Models.FrameWork.Category>
@using PagedList.Mvc


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3 class="page-title">Quản lý kho thuốc</h3>
<!-- BORDERED TABLE -->
<div class="panel">


    <div class="panel-body">

        @if (TempData["AlertMessage"] != null)
        {
            <div class="col-md-12">
                <div id="AlertClass" class="alert @TempData["AlertType"]  hide">@TempData["AlertMessage"]</div>
            </div>
        }

        <div style="margin-bottom:2%;margin-top:2%">
            @using (Html.BeginForm("Index", "Category", FormMethod.Get))
            {
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" value="@ViewBag.searchString" name="searchString" class="form-control" placeholder="Nhập tên thuốc cần tìm">
                        <span class="input-group-btn"><button type="submit" class="btn btn-primary">Tìm kiếm</button></span>
                    </div>
                </div>
            }

            <div class="row">
                <a href="/Category/Create" class="btn btn-success">Thêm mới</a>

            </div>

        </div>
        <div class=" col-sm-12 col-md-12 col-lg-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên thuốc</th>
                        <th>Ngày nhập</th>
                        <th>Số lượng</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.NgayNhap.Value.ToString("dd/MM/yyyy")</td>
                            <td>@item.SoLuong</td>
                            <td>
                                @if (@item.Status == true)
                                {
                                    <span class="badge bg-success">
                                        Còn sử dụng
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">
                                        Hết sử dụng
                                    </span>
                                }
                            </td>
                            <td>
                                <a href="/Category/Edit/@item.Id" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i></a>
                            </td>


                        </tr>
                    }
                </tbody>
            </table>

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = ViewBag.searchString }), new PagedListRenderOptions()
                {
                    ContainerDivClasses = new[] { "pagination-container", "centerPage" }
                })
        </div>
    </div>
</div>
