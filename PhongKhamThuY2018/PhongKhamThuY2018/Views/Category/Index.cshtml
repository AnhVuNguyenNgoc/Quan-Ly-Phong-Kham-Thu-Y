@model IEnumerable<Models.FrameWork.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- BORDERED TABLE -->
<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">Danh sách loại thuốc</h3>
    </div>
    <div class="panel-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tên thuốc</th>
                    <th>Ngày nhập</th>
                    <th>Số lượng</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                        {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.NgayNhap.Value.ToString("dd/MM/yyyy")</td>
                        <td>@item.SoLuong</td>
                        <td>
                            @if (@item.Status == true)
                           {
                                <span class="badge bg-success">
                                    Còn thuốc
                                </span>
                           }
                            else
                            {
                                <span class="badge bg-danger">
                                    Hết thuốc
                                </span>
                            }
                            </td>


                        </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        <!-- END BORDERED TABLE -->



