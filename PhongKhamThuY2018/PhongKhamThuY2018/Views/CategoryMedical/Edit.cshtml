@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Models.FrameWork.LOAITHUOC

<h3 class="page-title">Sửa thuốc</h3>
<!-- BORDERED TABLE -->
<div class="panel">

    <div class="panel-body">

        <div class=" col-sm-12 col-md-12 col-lg-12">

            @using (Html.BeginForm("Edit", "CategoryMedical", FormMethod.Post))
            {

                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(model => model.MALOAITHUOC)
                    @Html.TextBoxFor(model => model.MALOAITHUOC, new { @class = "form-control", @placeholder = "Mã thuốc", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.MALOAITHUOC, "", new { @class = "text-danger" })

                </div>
                 <div class="form-group">
                    @Html.LabelFor(model => model.TENLOAITHUOC)
                    @Html.TextBoxFor(model => model.TENLOAITHUOC, new { @class = "form-control", @placeholder = "Tên thuốc" })
                    @Html.ValidationMessageFor(model => model.TENLOAITHUOC, "", new { @class = "text-danger" })

                </div>
                
                <div class="form-group">
                    <div class="form-check">
                        @Html.CheckBoxFor(model => model.TINHTRANG, new { @class = "form-check-input" })
                        @Html.ValidationMessageFor(model => model.TINHTRANG, "", new { @class = "text-danger" })
                        @Html.LabelFor(model => model.TINHTRANG, new { @class = "form-check-label" })
                    </div>
                </div>


                <a href="/CategoryMedical/Index" class="btn btn-default"><i class="lnr lnr-cross-circle modifier-icon"></i>Hủy</a>
                <button type="submit" class="btn btn-success"><i class="fa fa-pencil modifier-icon"></i>Sửa</button>
            }

        </div>
    </div>
</div>
<!-- END BORDERED TABLE -->